{% extends 'site/siteBase.html.twig' %}

{% block title %}KLMS - News{% endblock %}

{% block header %}
    {% embed 'site/components/header.html.twig' with {'css_prefix': 'startpage'}%}
        {% block headerContent %}
            {{ parent() }}
            <h3>KRRU Lan Management System</h3>
            <p>System zur Organisation von professionellen LAN-Partys</p>
        {% endblock %}
    {% endembed %}
{% endblock %}


{% block main %}
    <div class="container pt-4">
        <div class="row row-cols-1 row-cols-md-2">
            {% for entry in news %}
                <div class="col mb-5">
                    {% include 'site/components/cards/cardContent.html.twig' with {'content': entry, 'link': path('news', {'id' : entry.id})} %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}