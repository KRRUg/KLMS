{% if settings.get("lan.stats.show") %}
    {% set display = [
        {name: 'Tickets bestellt', key: 'tickets_ordered', icon: 'fas fa-user' },
        {name: 'Tickets bezahlt', key: 'tickets_redeemed', icon: 'fas fa-money-bill' },
        {name: 'Freie Sitzpl√§tze', key: 'seats_free', icon: 'fas fa-chair' },
    ] %}
    <div class="container">
        <div class="card">
            <div class="card-body row justify-content-center">
                {% for d in display %}
                <div class="text-center col col-lg-2 col-md-3 col-sm-4 col-12 mb-1 mt-1">
                    <div style="font-size: 1.75rem;"><i class="{{ d.icon }} fa-fw"></i> <span class="text-primary">{{ stats.get(d.key) }}</span></div>
                    {{ d.name }}
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endif %}
