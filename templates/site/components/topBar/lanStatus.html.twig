{% if settings.get('lan.signup.enabled') %}
    <div class="text-light-muted">
        {% set user = app.user.user %}
        {% if user is not empty %}
            {% if user is not registered_user %}
                <a href="{{ path('shop_checkout') }}"><i class="fa fa-ticket"></i> Ticket kaufen</a>
            {% else %}
                <span><i class="fa fa-ticket"></i> Ticket vorhanden</span>
            {% endif %}
            {% if settings.get('lan.seatmap.enabled') %}
                &nbsp;|&nbsp;
                {% if user is seated_user %}
                    <span><i class="fas fa-chair"></i> Sitzplatz <a href="{{ url('seatmap') }}">{{ user | seat }}</a></span>
                {% else %}
                    <a href="{{ url('seatmap') }}"><i class="fas fa-chair"></i> Sitzplatz auswÃ¤hlen</a>
                {% endif %}
            {% endif %}
        {% endif %}
    </div>
{% endif %}
