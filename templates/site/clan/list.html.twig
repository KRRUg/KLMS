{% extends 'site/siteBase.html.twig' %}

{% block title %}Clans{% endblock %}

{% block main %}
    
    {# ToDo: Add DataTable #}
    <div class="container">
        <a role="button" class="btn btn-primary" href="{{ path('clan_create') }}">Clan erstellen</a>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <td>Clantag</td>
                    <td>Name</td>
                    <td>Aktionen</td>
                </tr>
            </thead>
            <tbody>
                {% for clan in clans %}
                    <tr>
                        <td>{{ clan.clantag }}</td>
                        <td>{{ clan.name }}</td>
                        <td>
                            <a href="{{ path('clan_show', {'uuid' : clan.uuid}) }}">anzeigen</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}