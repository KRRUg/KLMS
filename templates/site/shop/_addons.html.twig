<div class="row">
    <div class="col">
        <h1>Addons kaufen</h1>
        <div class="mb-3">
            {% if settings.get('lan.signup.info') is not empty %}
                {{ settings.get('lan.signup.info') | raw }}
            {% else %}
                <p>
                    Erweitere dein Gaming Erlebnis mit diesen tollen Addons!
                </p>
            {% endif %}
        </div>
    </div>
</div>
<hr/>
