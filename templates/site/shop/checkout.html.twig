{% extends 'site/siteBase.html.twig' %}

{% block title %}{{ settings.get('site.title') }} - Tickets & Addons kaufen{% endblock %}

{% block main %}
    {% set hasPayed = false %}
    <div class="container">
        {% if not hasPayed %}
            {% include 'site/shop/_tickets.html.twig' %}
            <hr />
        {% endif %}
        <div id="addonWrapper" class="{% if not hasPayed %}d-none{% endif %}">
            {% include 'site/shop/_addons.html.twig' %}
            <hr />
        </div>
        <div class="row">
            <div class="col mb-3">
                {{ form_start(form) }}

                {% if 'agb' is slug %}
                    <p>Durch das Anmelden zu Veranstaltung stimmst du unseren {{ 'agb' | slug_link }} zu.</p>
                {% endif %}

                {{ form_row(form.confirm) }}
                {# <label for="{{ form.confirm.vars.id }}">Ich stimme den {{  }} zu</label> #}

                <button class="btn btn-primary" type="submit">Anmelden</button>
                <a class="btn btn-secondary" href="{{ url('index') }}">Abbrechen</a>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('shop') }}
{% endblock %}