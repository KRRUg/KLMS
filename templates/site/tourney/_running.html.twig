{% macro tree_button(tourney) %}
    <a class="btn btn-primary btn-sm" href="{{ path('tourney_show', {'id': tourney.id }) }}"><i class="fa-solid fa-sitemap"></i> Turnierbaum</a>
{% endmacro %}

{% macro enter_result_button(game = null) %}
    {% if game is not null %}
        <button class="btn btn-primary btn-sm" type="button" {% if game is not null %}{# data-toggle="collapse" data-target=".registration-{{ game.id }}" #}{% else %}disabled="disabled"{% endif %}><i class="fa-solid fa-square-poll-horizontal"></i> Ergebnis eintragen</button>
    {% endif %}
{% endmacro %}

{% from 'site/tourney/show.html.twig' import teamnameA, teamnameB %}

{% macro pending_game_box(game = null) %}
    {% if game is not null and game.pending %}
        <div class="box">
            <div class="box-header">
                Ausstehendes Spiel
            </div>
            <div class="box-body text-center">
                {{ teamnameA(game) }} <span class="text-primary font-weight-bold">vs</span> {{ teamnameB(game) }}
            </div>
        </div>
    {% endif %}
{% endmacro %}

<div class="text-right">
    {{ _self.enter_result_button(current_game) }}
    {{ _self.tree_button(tourney) }}
</div>

<div class="container-fluid row">
    {% if current_game is null %}
        <span>Ausgeschieden.</span>
    {% else %}
        <div class="col-md-6">
            {{ _self.pending_game_box(current_game) }}
        </div>
    {% endif %}
    <div class="col-md-6">
    {% if not tourney.singlePlayer %}
    {% set team = tm.team %}
        <div class="box">
            <div class="box-header">
                {{ team.name }}
            </div>
            <div class="box-body">
                <ul class="list-unstyled">
                {% for member in team.members %}
                    <li>{{ member.gamer | username }}</li>
                {% endfor %}
                </ul>
            </div>
        </div>
    {% endif %}
    </div>
</div>
