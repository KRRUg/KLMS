{% extends 'site/siteBase.html.twig' %}

{% block title %}{{ settings.get('site.title') }} - Turniere{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Turniere</h1>
                <div>{{ settings.get('lan.tourney.text') | raw }}</div>
            </div>
        </div>
        <hr />
        <div>
            {% if can_register %}
                <div class="mb-3 text-right">
                    Token <span class="badge badge-pill badge-primary p-2"><i class="fa-solid fa-coins"></i> 20/20</span>
                </div>
            {% endif %}
            <div class="accordion mb-3" id="tourney-list">
            {% for tourney in my_tourneys %}
                {% include 'site/tourney/_card.html.twig' with {'tourney' : tourney, 'registered' : true, 'pending' : false} %}
            {% endfor %}
            {% for tourney in tourneys %}
                {% if tourney not in my_tourneys %}
                    {% include 'site/tourney/_card.html.twig' with {'tourney' : tourney, 'registered' : false, 'pending' : false} %}
                {% endif %}
            {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}