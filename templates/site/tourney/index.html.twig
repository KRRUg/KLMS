{% extends 'site/siteBase.html.twig' %}

{% block title %}{{ settings.get('site.title') }} - Turniere{% endblock %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1>Turniere</h1>
                <div>{{ settings.get('lan.tourney.text') }}</div>
            </div>
        </div>
        <hr>
        <div>
            {% if my_tourneys is not empty %}
            <h2>Meine Turniere</h2>
            <ul>
            {% for tourney in my_tourneys %}
                <li>
                    <a class="tourney registered" href="{{ path('tourney_show', {'id' : tourney.id}) }}">
                        {{ tourney.name }}
                    </a>
                </li>
            {% endfor %}
            </ul>
            <h2>Andere Turniere</h2>
            {% endif %}
            {% for tourney in tourneys %}
            <ul>
                {% if tourney not in my_tourneys %}
                    <li>
                    <a class="tourney" href="{{ path('tourney_show', {'id' : tourney.id}) }}">
                        {{ tourney.name }}
                    </a>
                    </li>
                {% endif %}
            </ul>
            {% endfor %}
        </div>
    </div>
{% endblock %}