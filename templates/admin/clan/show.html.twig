{% extends 'admin/adminBase.html.twig' %}

{% block title %}KLMS - Admin{% endblock %}
{% block siteheading %}<i class="far fa-file-alt"></i> Clan{% endblock %}
{% block main %}
    <h2>Clan</h2>
    <table>
        <thead>
        <tr>
            <td>Name</td>
            <td>Beschreibung</td>
            <td>Tag</td>
            <td>Website</td>
        </tr>
        </thead>
                <td>{{ clan.name }}</td>
                <td>{{ clan.description }}</td>
                <td>{{ clan.clantag }}</td>
                <td><a href="{{ clan.website }}" target="_blank">{{ clan.website }}</a></td>
    </table>
    <br /><h1>Users</h1>
    <table>
        <thead>
        <tr>
            <td>User</td>
            <td>Rang</td>
        </tr>
        </thead>
        <tbody>
            {% for user in clan.users %}
                <tr>
                    <td>
                        <a href="{{ path('admin_user_show', {'uuid' : user.user.uuid}) }}">{{ user.user.nickname }}</a>
                    </td>
                    <td>
                        {% if user.admin %}
                            Admin
                        {% else %}
                            Mitglied
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

