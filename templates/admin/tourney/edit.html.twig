{% extends 'admin/adminBase.html.twig' %}

{% block title %}KLMS - Admin{% endblock %}
{% block siteheading %}<i class="fas fa-trophy"></i> Turniere{% endblock %}

{% block main %}
    {% set data = form.vars.data %}
    <div class="clearfix mb-4">
        {{ form_start(form) }}
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <div class="card mb-4">
                        <div class="card-body">
                            {{ form_row(form.name) }}
                            {{ form_row(form.description) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5>Modus</h5>
                            {{ form_row(form.teamsize) }}
                            {{ form_row(form.mode) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5>Anzeige</h5>
                            {{ form_row(form.hidden) }}
                            {{ form_row(form.order) }}
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5>Turnier</h5>
                            {{ form_row(form.token) }}
                            {{ form_row(form.show_points) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col">
                {% include 'admin/components/lastModified.html.twig' with { 'data': data } %}
            </div>
        </div>
        <hr>
        {{ form_rest(form) }}
        <div class="float-right">
            <a class="btn btn-secondary" href="{{ path('admin_tourney') }}">Abbrechen</a>
            <button type="submit" id="content_save" class="btn-primary btn">Speichern</button>
        </div>
        {{ form_end(form) }}
        <div class="float-left">
            {% if data is not empty %}
                <form data-toggle="confirmModal" method="post" action="{{ path('admin_tourney_delete', {'id' : data.id}) }}" class="d-inline-block">
                    <input type="hidden" name="_token" value="{{ csrf_token(csrf_token_delete) }}">
                    <button class="btn btn-danger" type="submit" value="delete"><i class="fas fa-trash-alt"></i> LÃ¶schen</button>
                </form>
            {% endif %}
        </div>
    </div>
{% endblock %}
