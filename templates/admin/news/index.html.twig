{% extends 'base.html.twig' %}

{% block title %}Hello NewsAdminController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>News Liste</h1>

        <ul>
            {% for newsentry in news %}
            <li>
                {{ newsentry.title }}: {{ newsentry.content }} :
                <a href="{{ path('admin_news_edit', {'id' : newsentry.id}) }}"> bearbeiten </a>
                <a href="{{ path('admin_news_delete', {'id' : newsentry.id}) }}">delete</a>
            </li>
            {% endfor %}
        </ul>
        <a href="{{ path('admin_news_new') }}">neu</a>
    </div>
{% endblock %}
