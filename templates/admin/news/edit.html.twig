{% extends 'admin/adminBase.html.twig' %}

{% block title %}KLMS - Admin{% endblock %}
{% block siteheading %}<i class="far fa-newspaper"></i> News {% if id is defined %}bearbeiten{% else %}erstellen{% endif %}{% endblock %}
{% block main %}
    {% set data = form.vars.data %}

    {{ form_start(form) }}
    {% if not form.vars.valid %}
        <div class="alert alert-error">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <div class="row">
        <div class="col">
            <div class="card mb-4">
                <div class="card-body">
                    {{ form_row(form.title) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-body">
                   {{ form_row(form.content, {'attr': {'class': 'wysiwyg'}}) }}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-body">
                    {{ form_row(form.publishedFrom, {'attr': {'class': 'datetimepicker'}}) }}
                    {{ form_row(form.publishedTo, {'attr': {'class': 'datetimepicker'}}) }}
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    {{ form_row(form.imageFile) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col">
            {% include 'admin/components/lastModified.html.twig' with { 'data': data } %}
        </div>
    </div>
    <hr>
    {{ form_rest(form) }}
    <div class="float-right">
        <a class="btn btn-secondary" href="{{ path('admin_news') }}">Abbrechen</a>
        <button type="submit" id="news_save" class="btn-primary btn">Speichern</button>
    </div>
    {{ form_end(form) }}
    <div class="float-left">
        {% if data is not empty %}
            <form data-toggle="confirmModal" method="post" action="{{ path('admin_news_delete', {'id' : data.id}) }}" class="d-inline-block">
                <input type="hidden" name="_token" value="{{ csrf_token(csrf_token_delete) }}">
                <button class="btn btn-danger" type="submit" value="delete"><i class="fas fa-trash-alt"></i> LÃ¶schen</button>
            </form>
        {% endif %}
    </div>

{% endblock %}
