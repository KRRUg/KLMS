{% extends 'admin/adminBase.html.twig' %}

{% block title %}KLMS - Admin{% endblock %}
{% block siteheading %}<i class="fas fa-key"></i> Berechtigungen{% endblock %}
{% block main %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <table class="table">
                    <thead>
                    <tr>
                        <th class="col-md-4">User</th>
                        <th class="col-md-1">Berechtigungen</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for id, admin in admins %}
                        {% set user, permissions = admin[0], admin[1] %}
                        <tr>
                            <td>
                                <span>{{ user.getNickname() }}</span><br>
                                <small class="text-muted">{{ user.getEmail() }}</small>
                            </td>
                            <td>
                                {% for perm in permissions%}
                                    <span>{{ perm }}</span><br/>
                                {% endfor %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
