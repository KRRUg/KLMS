
{% for label, messages in app.flashes(['success', 'info', 'warning', 'danger', 'error']) %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible fade show d-block">
            <span class="badge badge-{{ label }} text-uppercase">{{ label }}</span>
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
{% endfor %}