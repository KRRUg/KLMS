{% extends 'admin/adminBase.html.twig' %}

{% block title %}KLMS - Admin{% endblock %}
{% block siteheading %}<i class="far fa-newspaper"></i> News{% endblock %}
{% block main %}
    <h2>Images</h2>
    {% for i in images %}
        <img
                src="{{ vich_uploader_asset(i, 'imageFile') }}"
                alt="{{ i.image.name }}"
                class="img-thumbnail"
                style="width:250px"
        />
    {% endfor %}

    <h2>New Image</h2>
    {{ form_start(form_upload) }}
    {% if not form_upload.vars.valid %}
        <div class="alert alert-error">
            {{ form_errors(form_upload) }}
        </div>
    {% endif %}
    {{ form_row(form_upload) }}
    <button type="submit" id="upload" class="btn-primary btn">Upload</button>

    {{ form_end(form_upload) }}
{% endblock %}