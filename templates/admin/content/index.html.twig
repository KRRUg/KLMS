{% extends 'base.html.twig' %}

{% block title %}Hello contentAdminController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>content Liste</h1>

        <ul>
            {% for contententry in content %}
            <li>
                {{ contententry.title }}: {{ contententry.content }} :
                <a href="{{ path('admin_content_edit', {'id' : contententry.id}) }}"> bearbeiten </a>
                <a href="{{ path('admin_content_delete', {'id' : contententry.id}) }}">delete</a>
            </li>
            {% endfor %}
        </ul>
        <a href="{{ path('admin_content_new') }}">neu</a>
    </div>
{% endblock %}
