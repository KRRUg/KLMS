{% extends 'base.html.twig' %}

{% block title %}KLMS - Content{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .box {
            float: left;
            padding: 20px;
            background: #eee;
            max-width: 700px;
            min-width: 300px;
        }

        .selected {
            background: #70a6fd;
        }

        .tree {
            list-style-type: none;
        }

        .tree ul {
            list-style-type: none;
        }

        .tree {
            color: #17324f;
        }

        .tree a {
            text-decoration: none;
            color: #17324f;
        }

        .tree a.selected {
            background: #70a6fd;
        }

        .tree .type {
            color: gray;
            float: none;
            font-size: x-small;
        }

        .tree .icons {
            float: right;
            padding-left: 10px;
            font-size: smaller;
        }

        .option {
            padding-bottom: 5px;
            cursor: pointer;
        }

        .option:hover {
            background: #70a6fd;
        }

        .option div.tooltip {
            display: none;
            position: absolute;
            font-size: small;
            color: #fff;
            background: #70a6fd;
            padding: 5px;
        }

        .option:hover div.tooltip {
            display: block;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Content Liste</h1>

    <div class="box">
        {% macro menu_links(nodes, d, id) %}
            {% for n in nodes %}
                <li>
                    {% set selected = id == n.getId() %}
                    <a href="{{ path('admin_content', {'id' : n.getId() }) }}" {% if selected %} class="selected" {% endif %}>{{ n.getName() }}</a>
                    {%  if selected %}
                        <div class="icons">
                            <span class="option" href="#"><b>+</b>
                                <div class="tooltip">
                                    <a href="{{ path('admin_content', {'id' : n.getId(), action : 'add', type : 'content' }) }}">content</a><br/>
                                    <a href="{{ path('admin_content', {'id' : n.getId(), action : 'add', type : 'path' }) }}">path</a><br/>
                                    <a href="{{ path('admin_content', {'id' : n.getId(), action : 'add', type : 'empty' }) }}">empty</a>
                                </div>
                            </span>
                            <a href="{{ path('admin_content', {'id' : n.getId(), action : 'up'}) }}">&#x25b2;</a>
                            <a href="{{ path('admin_content', {'id' : n.getId(), action : 'down'}) }}">&#x25bc;</a>
                        </div>
                    {% endif %}
                    <div class="type">{{ n.getType() }}</div>

                    {% if n.getChildNodes() is not empty %}
                        <ul>
                            {{ _self.menu_links(n.getChildNodes(), d+1, id) }}
                        </ul>
                    {% endif %}
                </li>
            {% endfor %}
        {% endmacro %}

        <ul class="tree">
            {{ _self.menu_links(tree, 1, node ? node.getId() : null) }}
        </ul>
    </div>
    <div class="box" >
        {% if node is not null %}
            {% if form is not empty %}
                {{ form(form) }}
            {% endif %}
            <br>
            <a href="{{ path('admin_content', {'id' : node.getId(), action : 'delete'}) }}">Löschen</a>
        {% else %}
            <p>Nichts ausgewählt!</p>
        {% endif %}
    </div>
{% endblock %}
