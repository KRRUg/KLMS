{% extends 'base.html.twig' %}
{% block body %}
    <div class="container-fluid">
        <header class="row bg-white shadow">
            <div class="logo col-2">
                <a class="p-3 d-block text-body" href="/admin"><i class="fas fa-ethernet"></i> KLMS</a>
            </div>
            <div class="col-10">
                <nav class="navbar navbar-light shadow-none">
                    <span class="navbar-brand mb-0 h1">{% block siteheading %}{% endblock %}</span>
                </nav>
            </div>
        </header>
        <div id="admin-wrap" class="row">
            <div id="sidenav" class="col-md-2 bg-dark py-3 shadow">
                {% block sidenav %}
                    {% include 'admin/components/sidenav.html.twig' %}
                {% endblock %}
            </div>
            <main id="main" class="col-md-10 pb-5">
                <div id="topbar" class="row bg-dark text-white mb-3">
                    {% block topbar %}
                        {% include 'admin/components/topbar.html.twig' %}
                    {% endblock %}
                </div>
                {% block main %}{% endblock %}
            </main>
        </div>
    </div>
{% endblock %}
