{% embed "modules/modals/skeleton.html.twig"
    with {
    'id': 'showSeatModal',
    'title' : 'Sitzplatz erstellen' ,
    'dialogClass' : 'modal-lg'
} %}
    {% block modalBody %}
        <div class="container-fluid">
            <div class="d-flex justify-content-between w-100 pb-3">
            </div>
            <div class="col">
                {{ form_start(form) }}
                {{ form_rest(form) }}
