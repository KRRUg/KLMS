{% extends 'admin/adminBase.html.twig' %}

{% block title %}KLMS - Admin{% endblock %}
{% block siteheading %}<i class="far fa-file-alt"></i> User{% endblock %}
{% block main %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <table class="table table-striped">
                    <tr>
                        <th>Nickname</th>
                    </tr>
                    {% for  user in users %}
                        <tr>
                            <td>{{ user.nickname }}</td>
                            <td>
                                <a href="{{ path('admin_user_show', {'uuid' : user.uuid}) }}">anzeigen</a>
                                <a href="{{ path('admin_user_edit', {'uuid' : user.uuid}) }}">editieren</a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
{% endblock %}

