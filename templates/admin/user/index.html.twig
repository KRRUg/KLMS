{% extends 'admin/adminBase.html.twig' %}

{% block title %}User - KLMS - Admin{% endblock %}
{% block siteheading %}<i class="fas fa-user"></i> User{% endblock %}
{% block main %}
    <div class="row">
        <div class="col-12">
            <div class="card">
                <table id="UserTable" class="table table-striped admin-data-table" data-order='[[1, "asc"]]' data-remote-target="{{ path('api_users') }}">
                    <thead>
                        <tr>
                            <th class="text-nowrap w-1" data-data="id">KLMS-ID</th>
                            <th 
                                class="w-25" 
                                data-data="nickname" 
                                data-render-function='{"elemType":"A", "attributes":{"data-toggle":"ajaxModal", "href": {"prepend":"{{ path('admin_user_show', {'uuid' : "--uuid--"}) }}"}}}'
                                >
                                Nickname
                            </th>
                            <th class="w-25" data-data="firstname">Vorname</th>
                            <th class="w-25" data-data="surname">Nachname</th>
                            <th 
                                class="text-nowrap w-1" 
                                data-orderable="false" 
                                data-searchable="false" 
                                data-default-content='<i class="fas fa-edit"></i> bearbeiten'
                                data-render-function='{"elemType":"A", "attributes":{"class":"btn btn-sm btn-outline-dark text-nowrap", "href": {"prepend":"{{ path('admin_user_edit', {'uuid' : "--uuid--"}) }}"} , "title":{"data":"nickname", "append":" bearbeiten"}}}'
                                >
                                Aktionen
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}