{% extends 'admin/adminBase.html.twig' %}

{% block title %}KLMS - Admin{% endblock %}
{% block siteheading %}<i class="far fa-envelope"></i> E-Mail: Neuer Newsletter{% endblock %}
{% block main %}
    {{ form_start(form) }}
    <div class="row">
        <div class="col-12">
            {% if not form.vars.valid %}
                <div class="alert alert-error">
                    {{ form_errors(form) }}
                </div>
            {% endif %}
            {{ form_row(form.name) }}
            {{ form_row(form.designFile) }}
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-9">
            {{ form_row(form.subject) }}
            {{ form_row(form.body, {'attr': {'class': 'wysiwyg'}}) }}
            <br>
        </div>
        <div class="col-3">
            <h3>Verwendbare Felder</h3>

            {% for key, field in availableFields %}
                <p>
                    &#123;&#123;{{ key }}&#125;&#125;<br>
                    <small>{{ field }}</small>
                </p>
            {% endfor %}
        </div>
    </div>
    <hr>
    {{ form_rest(form) }}
    <div class="float-right">
        <a class="btn btn-secondary" href="{{ path('admin_email', {'page':'template'}) }}">Abbrechen</a>
        <button type="submit" id="template_save" class="btn-primary btn">Speichern</button>
    </div>
    {{ form_end(form) }}
{% endblock %}
