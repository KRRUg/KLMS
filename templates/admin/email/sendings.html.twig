<div class="row">
    <div class="col-12">
        <div class="card">
            <table class="table">
                <thead>
                    <tr>
                        <th>Titel</th>
                        <th>Empf√§nger</th>
                        <th>Status</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                {% for email in emails %}
                    <tr>
                        <td>
                            {{ email.name }}
                            <br>
                            <small class="text-muted"><b>{{ email.subject }}</b></small>
                        </td>
                        <td>
                            {{ email.recipientGroup | groupname }}
                        </td>
                        {% set sending = email.emailSending %}
                        <td>
                            {% if sending.isNotStarted %}
                                In Vorbereitung seit {{ sending.created | date('H:i') }}
                            {% elseif sending.isInSending %}
                                Gestartet um {{ sending.started | date('H:i') }}
                            {% elseif sending.isFinished %}
                                Abgeschlossen am {{ sending.finished | date('d.m.Y - H:i') }}
                            {% endif %}
                        </td>
                        <td>
                            <a class="btn btn-outline-dark"
                               href="{{ path('admin_email_show', {'id' : sending.template.id}) }}"
                               title="Anzeigen">
                                <i class="fas fa-eye"></i></a>
                            {% if sending.isNotStarted %}
                                <form data-toggle="confirmModal" method="post" action="{{ path('admin_email_cancel', {'id' : email.id}) }}" class="d-inline-block">
                                    <input type="hidden" name="_token" value="{{ csrf_token(csrf_token_cancel) }}">
                                    <button class="btn btn-danger" type="submit" value="cancel"><i class="fas fa-window-close"></i> Sendung abbrechen</button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

