{% extends 'base.html.twig' %}

{% block title %}Hello AdministrationController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h2>Empfänger auswählen</h2>
        <hr>
        {{ form_start(form) }}
        <input type="submit" value="Empfänger speichern">
        {% for recipient in recipients %}
            <div>
                <input type="checkbox" id="cb-{{ recipient.id }}" name="recipients[]" value="{{ recipient.name }}"
                       checked>
                <label for="cb-{{ recipient.id }}">{{ recipient.name }}</label>
            </div>
        {% endfor %}

        {{ form_end(form) }}
    </div>
{% endblock %}
