{% extends 'admin/adminBase.html.twig' %}

{% block title %}KLMS - Admin{% endblock %}
{% block siteheading %}<i class="fas fa-th-large"></i> Einstellungen{% endblock %}
{% block main %}
    {{ form_start(form) }}
    {% if not form.vars.valid %}
        <div class="alert alert-error">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <div class="row">
        <div class="col mb-4">
            <div class="card">
                <div class="card-body">
                    Setting <span class="text-primary">{{ key }}</span><br/>
                    <small class="text-muted">{{ desc }}</small>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col mb-4">
            <div class="card">
                <div class="card-body">
                    {% if form.text is defined %}
                        {{ form_row(form.text) }}
                    {% endif %}
                    {% if form.file is defined %}
                        {{ form_row(form.file) }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col">
            <div class="d-flex flex-grow-1">
            {{ form_widget(form.delete, {'attr': {'data-toggle': 'confirmModal', 'class': 'btn btn-sm btn-danger mr-1'}}) }}
            <div class="flex-fill"></div>
            <a class="btn btn-sm btn-secondary ml-1" href="{{ path('admin_setting') }}">Abbrechen</a>
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-sm btn-primary ml-1'}}) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
